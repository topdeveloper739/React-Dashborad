{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": { "type": "string" },
    "webSiteName": { "type": "string" },
    "dataStorageAccountName": { "type": "string" },
    "uniqueId": { "type": "string" },
    "startLocation": { "type": "string" },
    "logoURl": { "type": "string" },
    "siteTitle": { "type": "string" },
    "siteName": { "type" : "string" }
  },
  "variables": {
    "applicationInsightName": "[concat('BotDashboardAppInsight-', parameters('uniqueId'))]"
  },
  "resources": [
    {
      "name": "[parameters('webSiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName')))]": "Resource",
        "displayName": "DashboardWebSite"
      },
      "properties": {
        "name": "[parameters('webSiteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('webSiteName'))]"
          ],
          "properties": {
            "phpVersion": "5.5",
            "netFrameworkVersion": "v4.6",
            "use32BitWorkerProcess": false, /* 64-bit platform */
            "webSocketsEnabled": true,
            "alwaysOn": true,
            "requestTracingEnabled": true, /* Failed request tracing, aka 'freb' */
            "httpLoggingEnabled": true, /* IIS logs (aka Web server logging) */
            "logsDirectorySizeLimit": 40, /* 40 MB limit for IIS logs */
            "detailedErrorLoggingEnabled": true, /* Detailed error messages  */
            "remoteDebuggingEnabled": false,
            "remoteDebuggingVersion": "VS2015",
            "scmType": "LocalGit",


            "virtualApplications": [
              {
                "virtualPath": "/",
                "physicalPath": "site\\wwwroot"
              },
              {
                "virtualPath": "/MyApp",
                "physicalPath": "site\\wwwroot"
              }
            ],


            "defaultDocuments": [
              "index.html",
              "hostingstart.html"
            ]
          }
        },
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('webSiteName'))]"
          ],
          "tags": {
            "displayName": "ApplicationSettings"
          },
          "properties": {
            "SCM_COMMAND_IDLE_TIMEOUT": "7200",
            "REACT_APP_BLOB_TILES": "[concat('{\"', parameters('siteName'), '\" : \"by-tiles\"}')]",
            "REACT_APP_BLOB_TIMESERIES": "[concat('{\"', parameters('siteName'), '\" : \"by-timeseries\"}')]",
            "REACT_APP_MAP_LOCATION": "[concat('{\"', parameters('siteName'), '\" : \"', parameters('startLocation'),'\"}')]",
            "REACT_APP_MAP_ZOOM": "[concat('{\"', parameters('siteName'), '\" : \"5\"}')]",
            "REACT_APP_SITE_LOGO": "[concat('{\"', parameters('siteName'), '\" : \"', parameters('logoURl'), '\"}')]",
            "REACT_APP_SITES": "[concat(parameters('siteName') ,' : ',parameters('siteName'))]",
            "REACT_APP_SITE_TITLE ": "[concat('{\"', parameters('siteName'), '\" : \"', parameters('siteTitle'), '\"}')]",
            "REACT_APP_SERVICE_HOST": "[concat('https://',parameters('webSiteName') , '.azurewebsites.net')]",
            "REACT_APP_STORAGE_ACCT_NAME": "[concat('{\"', parameters('siteName'), '\" : \"', parameters('dataStorageAccountName'), '\"}')]",
            "REACT_APP_TBL_CLASSIFICATION": "[concat('{\"', parameters('siteName'), '\" : \"https://', parameters('dataStorageAccountName'), '.table.core.windows.net:443/supercategorymappings\"}')]",
            "REACT_APP_TBL_KEYWORDS": "[concat('{\"', parameters('siteName'), '\" : \"https://', parameters('dataStorageAccountName'), '.table.core.windows.net:443/searchkeywords\"}')]",
            "WEBSITE_NODE_DEFAULT_VERSION": "5.0.0",
            "REACT_APP_APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightName')), '2014-04-01').InstrumentationKey]",
            "DEFAULT_SITE_NAME": "[parameters('siteName')]"
          }
        }
      ]
    },
    {
      "name": "[variables('applicationInsightName')]",
      "type": "Microsoft.Insights/components",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webSiteName'))]"
      ],
      "tags": {
        "displayName": "Component ApplicationInsight"
      },
      "properties": {
        "applicationId": "[resourceId('Microsoft.Web/sites', parameters('webSiteName'))]"
      }
    }
  ],
  "outputs": {}
}
